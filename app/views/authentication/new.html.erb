<h2>アプリ認証</h2>

<%= form_tag authentication_new_url, method: :get, class: 'form-horizontal' do %>
  <div class="form-group">
    <label for="client_id" class="col-sm-3 control-label">クライアントID</label>
    <div class="col-sm-9">
      <%= text_field_tag 'client_id', nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label for="client_secret" class="col-sm-3 control-label">クライアントシークレット</label>
    <div class="col-sm-9">
      <%= text_field_tag 'client_secret', nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <p><%= submit_tag '送信', class: 'btn btn-default' %></p>
    </div>
  </div>
<% end %>